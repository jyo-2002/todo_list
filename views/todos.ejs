<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #4dc4d8;
    }
    .container {
      background-color: #7fdce9;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    .input-group {
      margin-bottom: 15px;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
    .list-group-item {
      background-color: #9dc2e8;
      border: none;
    }
    .list-group-item:hover {
      background-color: #93b3d3;
    }
    .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
    }
    .btn-danger:hover {
      background-color: #b02a37;
      border-color: #b02a37;
    }
  </style>
</head>
<body>

<!-- ... Previous code ... -->

<div class="container mt-5">
    <h2 class="text-center mb-4">List here!</h2>
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Add a task" id="taskInput">
      <div class="input-group-append">
        <button class="btn btn-primary" type="button" onclick="addTask()">Add</button>
      </div>
    </div>
    
    <ul class="list-group" id="taskList">
      <!-- Tasks will be added dynamically here -->
    </ul>
    
    <button class="btn btn-danger" onclick="clearTasks()">Clear All Tasks</button>
  </div>
  
  <script>
    function addTask() {
      var taskInput = document.getElementById("taskInput");
      var taskList = document.getElementById("taskList");
      
      if (taskInput.value !== "") {
        var taskItem = document.createElement("li");
        taskItem.className = "list-group-item d-flex justify-content-between align-items-center";
        taskItem.innerHTML = `<label><input type="checkbox" class="mr-2"> ${taskInput.value}</label>` +
                             '<button class="btn btn-danger btn-sm" onclick="removeTask(this)">Remove</button>';
        taskList.appendChild(taskItem);
        taskInput.value = "";
      }
    }
    
    function removeTask(button) {
      button.parentNode.remove();
    }
    
    function clearTasks() {
      var taskList = document.getElementById("taskList");
      taskList.innerHTML = "";
    }
  </script>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
  </body>
  </html>